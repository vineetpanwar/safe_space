{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/node",
        "config": {
          "devCommand": "npm run dev --prefix client",
          "buildCommand": "npm run build --prefix client"
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "client/$1" }
    ],
    "env": {
      "NEXT_PUBLIC_VERCEL_URL": "${VERCEL_URL}"
    },
    "framework": "nextjs"
  }